<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppListaSupermercado.View.FormularioCadastro"
             Title="{Binding NomeProduto}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView>
        <StackLayout>
                <Label Text="Registre seu produto" HorizontalOptions="CenterAndExpand" FontSize="30" TextColor="#D6D071"/>
                <Frame BackgroundColor="#737373" CornerRadius="20" BorderColor="#D6D071" Margin="10" VerticalOptions="CenterAndExpand" >

             <StackLayout>

            

            <Label Text="Nome do Produto"  Margin="10"/>
            <Entry x:Name="txt_descricao"  Margin="10" />

            <Label Text="Preço Estimado" Margin="10" />
            <Entry x:Name="txt_precoE" Margin="10" Keyboard="Numeric"/>

            <Label Text="Preço Pago" Margin="10" />
            <Entry x:Name="txt_precoP" Margin="10" Keyboard="Numeric"/>

            <Label Text="Quantidade" Margin="10" />
            <Entry x:Name="txt_quantidade" Margin="10" Keyboard="Numeric"/>


            
                 
             </StackLayout>
            </Frame>

        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
    
    
    
</ContentPage>